{% extends 'base.html.twig' %}

{% block title %}CARFLY{% endblock %}

{% block body %}
    <section class="container">
        <section id="auth-buttons">
            <button onclick='location.href="{{path("app_car")}}"'  class="auth-button">OUR CARS</button>
            <button onclick='location.href="{{path('app_circuit')}}"' class="auth-button">OUR CIRCUITS</button>
            <button onclick='location.href="{{path('user_new')}}"' class="auth-button">SCHEDULE</button>
            <button onclick='location.href="{{path('schedule_index')}}"' class="auth-button">TICKETING</button>
            <button onclick='location.href="{{path('app_contact')}}"' class="auth-button">CONTACT</button>
        </section>
    </section>

    <section class="container">
        <section id="auth-buttons">
            <button onclick='location.href="{{path('app_')}}"'  class="auth-button">Sportif</button>
            <button onclick='location.href="{{path('app_')}}"' class="auth-button">Club</button>
        </section>
    </section>
{% block reservationForm %}
    {{ form_start(reservationForm, { 'attr': { 'class': 'reservationForm' }}) }}


    <div id="js-first-part-form-club" class="part-form">
        {{ form_errors(reservationForm.firstname) }}
        {{ form_widget(reservationForm.firstname)}}

        {{ form_errors(reservationForm.lastname) }}
        {{ form_widget(reservationForm.lastname)}}

        {{ form_errors(reservationForm.email) }}
        {{ form_widget(reservationForm.email)}}

        {{ form_errors(reservationForm.phone) }}
        {{ form_widget(reservationForm.phone)}}

        {{ form_errors(reservationForm.name) }}
        {{ form_widget(reservationForm.name)}}

        {{ form_errors(reservationForm.days) }}
        {{ form_widget(reservationForm.days)}}

        {{ form_errors(reservationForm.hours) }}
        {{ form_widget(reservationForm.hours)}}

        {{ form_errors(reservationForm.carsName) }}
        {{ form_widget(reservationForm.carsName)}}

        <button type="submit" class="continue-btn">Reserver</button>
    </div>

    {{ form_end(reservationForm) }}

{% endblock reservationForm %}

{% endblock %}